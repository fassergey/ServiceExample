{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "spring": {
    "cloud": {
      "Kubernetes": {
        "Config": {
          "Sources": [
            {
              "Name": "config-test",
              "Namespace": "default"
            },
            {
              "Name": "alternative-config-test",
              "Namespace": "default"
            }
          ]
        },
        "Secrets": {
          "Sources": [
            {
              "Name": "secret-test",
              "Namespace": "default"
            }
          ]
        },
        "Reload": {
          "Mode": "Polling", // Event - alternative - attempt to maintain an open connection to the API server for real-time reloading of configuration data
          "Period": 15,
          "ConfigMaps": true,
          "Secrets": true
        }
      }
    }
  },
  "management": {
    "endpoints": {
      "Actuator": {
        "Exposure": {
          "Include": [ "env", "health", "info", "loggers", "mappings", "refresh" ] //"ping" ]
        }
      },
      "cloudfoundry": {
        "validateCertificates": false
      },
      "path": "/mgmt",
      "env": {
        "KeysToSanitize": [
          "password",
          "secret",
          "key",
          "token",
          ".*credentials.*",
          "vcap_services",
          "ConnectionString"
        ]
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
